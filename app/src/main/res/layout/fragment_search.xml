<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/avd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            style="@style/TextAppearance.Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Search" />

            <LinearLayout
                android:id="@+id/container_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="37dp"
                android:layout_margin="24dp"
                android:background="@drawable/bg_container_search_input"
                app:layout_constraintTop_toBottomOf="@id/avd_title">

                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:hint="Search Keyword..."
                    android:textColorHint="@color/color_hint"
                    android:background="@null"
                    android:maxLines="1"
                    android:privateImeOptions="defaultInputmode=korean"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:paddingLeft="12dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <ImageView
                    android:id="@+id/search_btn"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/ic_search"
                    android:paddingRight="11dp"
                    android:paddingLeft="11dp" />
            </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommend_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/container_input"
            app:spanCount="4"
            tools:itemCount="4"
            tools:listitem="@layout/itm_search_recommend_keyword" />

        <fragment
            android:id="@+id/nav_host_fragment_search"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recommend_list"
            app:navGraph="@navigation/search_navigation"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
